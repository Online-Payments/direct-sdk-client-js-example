{
  "compilerOptions": {
    "types": ["webpack-env"],
    "noImplicitAny": false,
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    /* bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },

  /* webpack uses ts-node to parse webpack.config.ts, see https://webpack.js.org/configuration/configuration-languages/#typescript */
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
